<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/display_formula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2 + 2"
        android:textSize="30sp"
        android:gravity="right"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/display_formula"
        tools:text="4"
        android:textSize="30sp"
        android:textColor="#000"
        android:gravity="right"
        android:layout_marginRight="10dp"
        />


    <androidx.constraintlayout.helper.widget.Flow

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#e4e4e4"
        app:constraint_referenced_ids="keyboard_num7,keyboard_num8,keyboard_num9,keyboard_num4,keyboard_num5,keyboard_num6,keyboard_num1,keyboard_num2,keyboard_num3,keyboard_num_dot,keyboard_num0,keyboard_num_del"
        app:flow_horizontalStyle="packed"
        app:flow_wrapMode="aligned"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/keyboard_equal" />
    <Button
        android:id="@+id/keyboard_num7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        style="@style/Operand"
        />
    <Button
        android:id="@+id/keyboard_num8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        style="@style/Operand"
        />
    <Button
        android:id="@+id/keyboard_num9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        style="@style/Operand"
        />
    <Button
        android:id="@+id/keyboard_num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        style="@style/Operand"
        />
    <Button
        android:id="@+id/keyboard_num5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        style="@style/Operand"
        />
    <Button
        android:id="@+id/keyboard_num6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        style="@style/Operand"
        />
    <Button
        android:id="@+id/keyboard_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        style="@style/Operand"
        />
    <Button
        android:id="@+id/keyboard_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        style="@style/Operand"
        />
    <Button
        android:id="@+id/keyboard_num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        style="@style/Operand"
        />
    <Button
        android:id="@+id/keyboard_num_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        style="@style/Operand"
        />
    <Button
        android:id="@+id/keyboard_num0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        style="@style/Operand"
        />
    <Button
        android:id="@+id/keyboard_num_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="del"
        style="@style/Operand"
        />

    <Button
        android:id="@+id/keyboard_division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/keyboard_multiplication"
        app:layout_constraintRight_toRightOf="parent"
        android:text="÷"
        style="@style/Operator"
        />
    <Button
        android:id="@+id/keyboard_multiplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/keyboard_minus"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/Operator"
        android:text="×"
        />
    <Button
        android:id="@+id/keyboard_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/keyboard_plus"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/Operator"
        android:text="−"
        />
    <Button
        android:id="@+id/keyboard_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/keyboard_equal"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/Operator"
        android:text="+"
        />
    <Button
        android:id="@+id/keyboard_equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/Equal"
        android:text="="
        />



</androidx.constraintlayout.widget.ConstraintLayout>