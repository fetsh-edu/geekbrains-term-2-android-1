<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Operand" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">#FFF</item>
    </style>
    <style name="Operator" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">#E1E2E1</item>
    </style>
    <style name="Equal" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#E1E2E1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


</resources>